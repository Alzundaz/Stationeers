define AVCORRECT 0.66666
define BVCORRECT -10
define AHEADCOEFF 2
define MINCHARGE 100
define SOLARPANELHASH -2045627372
define DUALSOLARPANELHASH -539224550

alias DaylightSensor d0

alias hSun r0
alias vSun r1
alias rValue r2
alias vValue r3

alias lastRValue r5
alias lastVValue r6

alias charge r8
alias var r9

lb lastRValue SOLARPANELHASH Horizontal 0
lb lastVValue SOLARPANELHASH Vertical 0

start:

jal checkCharge

l hSun DaylightSensor Horizontal
l vSun DaylightSensor Vertical

sub rValue hSun 90
brge rValue 0 2
add rValue rValue 360
max rValue rValue 0

sub vValue 90 vSun
mul vValue vValue AVCORRECT
add vValue vValue BVCORRECT
max vValue vValue 0
min vValue vValue 50

sub var rValue lastRValue
move lastRValue rValue
mul var var AHEADCOEFF
add rValue rValue var

sub var vValue lastVValue
move lastVValue vValue
mul var var AHEADCOEFF
add vValue vValue var

sb SOLARPANELHASH Horizontal rValue
sb SOLARPANELHASH Vertical vValue
sb DUALSOLARPANELHASH Horizontal rValue
sb DUALSOLARPANELHASH Vertical vValue

yield
j start

checkCharge:
lb charge SOLARPANELHASH Charge 1
lb var DUALSOLARPANELHASH Charge 1
add charge charge var

div charge charge 2
bgt charge MINCHARGE ra

sb SOLARPANELHASH Horizontal 0
sb SOLARPANELHASH Vertical 0
sb DUALSOLARPANELHASH Horizontal 0
sb DUALSOLARPANELHASH Vertical 0

yield
yield
j start
